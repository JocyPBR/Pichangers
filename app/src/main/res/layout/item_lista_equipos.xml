<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/eteEquipo"
    android:padding="16dp"
    android:background="@drawable/borde">

    <pe.edu.ulima.pc1.listadoequipos.ListaEquiposItemView
        android:id="@+id/iviFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/equipo" />

    <LinearLayout
        android:id="@+id/eteSim"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/iviFondo"
        android:gravity="center"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/eteMas"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/mas"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/etePersona"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/persona"/>

        <ImageView
            android:id="@+id/eteInternet"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/internet"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tviNombreEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo 1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_above="@id/eteSim"/>

</RelativeLayout>
